@model IEnumerable<SistReservasDeportivas.Models.Cliente>

<h2 class="mb-3">Clientes</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Nuevo Cliente
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Fecha Nacimiento</th>
            <th>Tel√©fono</th>
            <th>Email</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Dni</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.FechaNacimiento.ToShortDateString()</td>
            <td>@item.Telefono</td>
            <td>@item.Email</td>
            <td>
                <div class="btn-group btn-group-sm">
                    <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-primary">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
