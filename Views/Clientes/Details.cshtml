@model SistReservasDeportivas.Models.Cliente

<h2 class="mb-3">Detalles del Cliente</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">DNI</dt>
            <dd class="col-sm-9">@Model.Dni</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Fecha Nacimiento</dt>
            <dd class="col-sm-9">@Model.FechaNacimiento.ToShortDateString()</dd>

            <dt class="col-sm-3">Tel√©fono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.IdCliente" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>
