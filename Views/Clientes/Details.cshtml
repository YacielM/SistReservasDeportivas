@model SistReservasDeportivas.Models.Cliente

<h2>Detalles del Cliente</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.Dni</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Fecha Nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento.ToShortDateString()</dd>

        <dt class="col-sm-2">Tel√©fono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdCliente" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
