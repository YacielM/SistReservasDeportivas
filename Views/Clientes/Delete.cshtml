@model SistReservasDeportivas.Models.Cliente

<h2 class="mb-3 text-danger">Eliminar Cliente</h2>

<div class="alert alert-warning">
    <strong>¿Seguro que deseas eliminar este cliente?</strong>
    Esta acción no se puede deshacer.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">DNI</dt>
            <dd class="col-sm-9">@Model.Dni</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdCliente" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </div>
</form>
