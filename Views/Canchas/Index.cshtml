@model IEnumerable<SistReservasDeportivas.Models.Cancha>

<h2 class="mb-3">Canchas</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Cancha
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th class="text-end">Precio por hora</th>
            <th>Estado</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Tipo</td>
            <td class="text-end">@item.PrecioHora.ToString("C")</td>
            <td>
                @if (item.Estado == "Disponible")
                {
                    <span class="badge bg-success">Disponible</span>
                }
                else if (item.Estado == "Ocupada")
                {
                    <span class="badge bg-danger">Ocupada</span>
                }
                else
                {
                    <span class="badge bg-secondary">@item.Estado</span>
                }
            </td>
            <td>
                <div class="btn-group btn-group-sm">
                    <a asp-action="Details" asp-route-id="@item.IdCancha" class="btn btn-primary">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.IdCancha" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdCancha" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay canchas cargadas a√∫n.</div>
}
