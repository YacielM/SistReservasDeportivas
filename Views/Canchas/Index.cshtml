@model IEnumerable<SistReservasDeportivas.Models.Cancha>

<h2 class="mb-3">Canchas</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Cancha
    </a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var cancha in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(cancha.Foto))
                {
                    <img src="~/canchas/@cancha.Foto" class="card-img-top" style="object-fit: cover; aspect-ratio: 1/1;" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="aspect-ratio: 1/1;">
                        <span class="text-muted">Sin foto</span>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@cancha.Nombre</h5>
                    <p class="card-text">
                        Tipo: @cancha.Tipo <br />
                        Precio por hora: @cancha.PrecioHora.ToString("C") <br />
                        Estado:
                        @if (cancha.Estado == "Disponible")
                        {
                            <span class="badge bg-success">Disponible</span>
                        }
                        else if (cancha.Estado == "Ocupada")
                        {
                            <span class="badge bg-danger">Ocupada</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@cancha.Estado</span>
                        }
                    </p>
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@cancha.IdCancha" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Edit" asp-route-id="@cancha.IdCancha" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@cancha.IdCancha" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">No hay canchas cargadas a√∫n.</div>
}
