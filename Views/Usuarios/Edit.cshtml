@model SistReservasDeportivas.Models.Usuario

<h2>Editar Usuario</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdUsuario" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Apellido" class="form-label"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label"></label>
        <select asp-for="Rol" class="form-select">
            <option value="Administrador">Administrador</option>
            <option value="Empleado">Empleado</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Clave" class="form-label">Nueva Clave (opcional)</label>
        <input asp-for="Clave" type="password" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Avatar</label>
        <input type="file" name="AvatarFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="~/avatars/@Model.Avatar" width="80" class="rounded-circle mt-2" />
        }
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
