@model IEnumerable<SistReservasDeportivas.Models.Reserva>

<h2 class="mb-3">Reservas</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nueva Reserva
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Cancha</th>
            <th>Fecha</th>
            <th>Hora Inicio</th>
            <th>Hora Fin</th>
            <th class="text-end">Monto</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Cliente!.Nombre @item.Cliente.Apellido</td>
            <td>@item.Cancha!.Nombre (@item.Cancha.Tipo)</td>
            <td>@item.Fecha.ToShortDateString()</td>
            <td>@item.HoraInicio</td>
            <td>@item.HoraFin</td>
            <td class="text-end">@item.Monto.ToString("C")</td>
            <td>
                <div class="btn-group btn-group-sm">
                    <a asp-action="Details" asp-route-id="@item.IdReserva" class="btn btn-primary">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.IdReserva" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdReserva" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Bloque de paginaciÃ³n -->
<div class="d-flex justify-content-center mt-3">
    <nav>
        <ul class="pagination">
            @{
                int totalPages = (ViewData["TotalPages"] as int?) ?? 0;
                int currentPage = (ViewData["CurrentPage"] as int?) ?? 1;
            }


            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Anterior</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>
</div>
