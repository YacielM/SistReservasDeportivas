@model SistReservasDeportivas.Models.Pago

<h2 class="mb-3">Nuevo Pago</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="row g-3">
                <!-- Reserva con bÃºsqueda AJAX -->
                <div class="col-md-6">
                    <label class="form-label">Reserva</label>
                    <input type="text" id="reservaSearch" class="form-control" placeholder="Buscar reserva..." />
                    <input type="hidden" asp-for="IdReserva" id="IdReserva" />
                    <div id="reservaResults" class="list-group"></div>
                    <span asp-validation-for="IdReserva" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Importe" class="form-label"></label>
                    <input asp-for="Importe" class="form-control" />
                    <span asp-validation-for="Importe" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Fecha" class="form-label"></label>
                    <input asp-for="Fecha" type="date" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        async function buscarReservas(q) {
            const res = await fetch(`/api/ReservasApi/search?q=${encodeURIComponent(q)}`);
            return await res.json();
        }

        document.getElementById("reservaSearch").addEventListener("input", async e => {
            const q = e.target.value;
            const resultsDiv = document.getElementById("reservaResults");
            resultsDiv.innerHTML = "";
            if (q.length < 2) return;
            const reservas = await buscarReservas(q);
            reservas.forEach(r => {
                const item = document.createElement("button");
                item.type = "button";
                item.className = "list-group-item list-group-item-action";
                item.textContent = r.descripcion;
                item.onclick = () => {
                    document.getElementById("IdReserva").value = r.id;
                    document.getElementById("reservaSearch").value = r.descripcion;
                    resultsDiv.innerHTML = "";
                };
                resultsDiv.appendChild(item);
            });
        });
    </script>
}
