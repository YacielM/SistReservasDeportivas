@model IEnumerable<SistReservasDeportivas.Models.Pago>

<h2 class="mb-3">Pagos</h2>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Reserva</th>
            <th>Cliente</th>
            <th>Cancha</th>
            <th>Importe</th>
            <th>Fecha</th>
            <th style="width:200px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Reserva!.IdReserva</td>
            <td>@item.Reserva!.Cliente!.Nombre @item.Reserva!.Cliente!.Apellido</td>
            <td>@item.Reserva!.Cancha!.Nombre (@item.Reserva!.Cancha!.Tipo)</td>
            <td>@item.Importe.ToString("C")</td>
            <td>@item.Fecha.ToShortDateString()</td>
            <td>
                <div class="btn-group btn-group-sm">
                    <a asp-action="Details" asp-route-id="@item.IdPago" class="btn btn-primary">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.IdPago" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdPago" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    int totalPages = (ViewData["TotalPages"] as int?) ?? 0;
    int currentPage = (ViewData["CurrentPage"] as int?) ?? 1;
}

    <div class="d-flex justify-content-center mt-3">
        <nav>
            <ul class="pagination">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Anterior</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>
